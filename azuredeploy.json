{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "AppServerName": {
            "type": "string",
            "metadata": {
                "description": "Web App Name"
            }
        },
        "VirtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "Virtual Network for this deployment"
            }
        
        },
        "wafsubnet": {
            "type": "String"
        },
        "vNetResourceGroup": {
            "type": "String",
            "metadata": {
                "description": "The name of the vnet resource group"
            }
            },
        "license": {
            "allowedValues": [
                "hourly",
                "byol"
            ],
            "type": "String",
            "metadata": {
                "description": "Hourly (PAYG) or BYOL (Bring your own) license"
            },
            "defaultValue": "byol"
            },
        "numberOfInstances": {
            "defaultValue": 2,
            "type": "Int"
            },
        "adminPassword": {
            "type": "SecureString",
            "metadata": {
                "description": "Password for the Virtual Machine."
            }
            },
        "dnsNameForLBIP": {
            "type": "String",
            "metadata": {
                "description": "Unique DNS Name for the Public IP used to access the WAF."
            }
            },
        "wafvmSize": {
            "allowedValues": [
                "Standard_DS1_v2",
                "Standard_DS1_v2",
                "Standard_D2s_v3",
                "Standard_D4s_v3"
            ],
            "type": "String",
            "metadata": {
                "description": "Size of instances"
            }
            },
        "managedIdentities": {
            "type": "string",
            "allowedValues": [
                "yes",
                "no"
            ],
            "defaultValue": "no",
            "metadata": {
                "description": "Deploy with managed identities"
            }
            },
        "computeApiVersion": {
            "type": "string",
            "defaultValue": "2017-03-30",
            "metadata": {
                "description": "description"
            }
            }
    },
    "variables": {
        "storageaccountname": "[concat(parameters('AppServerName'),'001storage')]",
        "vNetResourceGroup": "[parameters('vNetResourceGroup')]",
        "virtualnetworkname": "[concat(parameters('VirtualNetworkName'),'-VirtualNetwork')]",
        "appserverpublicip": "[concat(parameters('AppServerName'),'-PublicIP')]",
        "appservernsg": "[concat(parameters('AppServerName'),'-nsg')]",
        "appservernic": "[concat(parameters('AppServerName'),'-NetworkInterface')]",
        "vnetID": "[resourceId(parameters('VNetResourceGroup'),'Microsoft.Network/virtualNetworks',parameters('VirtualNetworkName'))]",
        "serversubnetname": "[concat(parameters('AppServerName'),'-VirtualNetwork-Subnet')]",
        "prefix": "Barracuda",
        "license": "[parameters('license')]",
        "numberOfInstances": "[parameters('numberOfInstances')]",
        "adminPassword": "[parameters('adminPassword')]",
        "dnsNameForLBIP": "[parameters('dnsNameForLBIP')]",
        "vmSize": "[parameters('wafvmSize')]",
        "computeApiVersion": "2017-03-30",
        "managedIdentities": "[parameters('managedIdentities')]",
        "appservername": "[parameters('AppServerName')]"
    },
    "resources": [
        {
            "name": "[variables('storageaccountname')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "tags": {
                "displayName": "storageaccounts"
            },
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "name": "[variables('appserverpublicip')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "Web App PublicIPAddress"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[toLower(concat(parameters('AppServerName'), parameters('VirtualNetworkName')))]"
                }
            }
        },
        {
            "name": "[variables('appservernsg')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "[concat(variables('appservernsg'),'-nsgRule1')]",
                        "properties": {
                            "description": "Inbound Rule for AppServer",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('virtualnetworkname')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('appservernsg'))]"
            ],
            "tags": {
                "displayName": "VirtualNetwork for the deployment"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('serversubnetname')]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('AppServerName'),'-nsg'))]"
                            }
                        }
                    },
                    {
                        "name": "[parameters('wafsubnet')]",
                        "properties": {
                            "addressPrefix": "10.0.1.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('appservernic')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('appserverpublicip'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualnetworkname'))]"
            ],
            "tags": {
                "displayName": "[variables('appservernic')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('appserverpublicip'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualnetworkname'), variables('serversubnetname'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('AppServerName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('AppServerName'),'-NetworkInterface'))]"
            ],
            "tags": {
                "displayName": "[parameters('AppServerName')]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_A2_v2"
                },
                "osProfile": {
                    "computerName": "[parameters('AppServerName')]",
                    "adminUsername": "labuser",
                    "adminPassword": "[variables('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "16.04-LTS",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('AppServerName'),'-OSDisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('appservernic'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', variables('storageaccountname'))).primaryEndpoints.blob]"
                    }
                }
            }
        },
        {
            "name": "linkedDeployment1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/selahcloud/barracudawaftestdrive/main/wafdeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminPassword": {
                        "value":"[variables('adminPassword')]"
                    },
                    "prefix": {
                        "value": "[variables('prefix')]"
                    },
                    "dnsNameForLBIP": {
                        "value":"[variables('dnsNameForLBIP')]"
                    },
                    "computeApiVersion": {
                        "value": "[variables('computeApiVersion')]"
                    },
                    "vNetResourceGroup": {
                        "value":"[variables('vNetResourceGroup')]"
                    },
                    "vNETName": {
                        "value":"[variables('virtualnetworkname')]"
                    },
                    "wafsubnet": {
                        "value":"[parameters('wafsubnet')]"
                    },
                    "license": {
                        "value": "[variables('license')]"
                    },
                    "numberOfInstances": {
                        "value": "[variables('numberOfInstances')]"
                    },
                    "vmSize": {
                        "value": "[variables('vmSize')]"
                    },
                    "managedIdentities": {
                        "value": "[variables('managedIdentities')]"
                    }
                }
            }
        }
    ],
    "outputs": {

        "ServerPublicIP": {
            "type": "object",
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',variables('appserverpublicip')))]"
        },
        "ServerHostName": {
            "type": "object",
            "value": "[reference(resourceId('Microsoft.Network/networkInterfaces',variables('appservernic')))]"

        },
        "LoadBalancerPublicIP": {
            "type": "string",
            "value": "[reference('linkedDeployment1').outputResources.LoadBalancerPublicIP]"
        },
        "AvailabilitySetName": {
            "type": "string",
            "value": "[reference('linkedDeployment1').outputResources.AvailabilitySetName]"
        }
    }
}